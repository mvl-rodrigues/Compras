<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_formulario_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_formulario_nome"
            android:inputType="textCapWords"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/activity_formulario_preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="8dp"
            android:hint="@string/activity_formulario_preco"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toTopOf="@id/activity_formulario_nome"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Spinner
            android:id="@+id/activity_formulario_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="8dp"
            android:entries="@array/categorias"
            app:layout_constraintTop_toTopOf="@id/activity_formulario_preco"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <RadioGroup
            android:id="@+id/activity_formulario_frequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/activity_formulario_categoria"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <RadioButton
                android:id="@+id/activity_formulario_frequencia_mensal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_formulario_frequencia_mensal"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/activity_formulario_frequencia_eventual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_formulario_frequencia_eventual"/>
        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

</ScrollView>